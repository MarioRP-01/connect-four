{
    "version": "1.0.0",
    "configurations": [
      {
        "name": "TS-Node",
        "type": "node",
        "request": "launch",
        "console": "integratedTerminal",
        "runtimeExecutable": "node",
        "runtimeArgs": [
            "--nolazy",
            "-r",
            "./node_modules/ts-node/register/transpile-only",
            "--loader",
            "ts-node/esm"
        ],
        "args": ["src/index.ts"],
        "cwd": "${workspaceRoot}",
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": ["<node_internals>/**", "node_modules/**", ".vscode/**"]
      }
    ]
  }
      