@startuml
!theme amiga

skin rose

title Connect4

class Connect4
class Game
interface Player
class Bot
class Human
class Board
class Hole
class Turn
class Token
class Column
class Put

class Result
class Draw
class Victory
class FourInRow
class FourInColumn
class FourInDiagonal
class FourInInverseDiagonal

Connect4 *--> "0..n" Game

Result <|-- Victory
Result <|-- Draw

Victory o--> Hole : 4

Victory <|-- FourInRow
Victory <|-- FourInColumn
